<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="12dp"
		android:paddingRight="12dp">
		<TextView
			android:id="@+id/unit_conv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Choose a category and 2 units from dropdowns and enter value:"/>
		<View
			android:id="@+id/unit_conv_pb1"
			android:layout_below="@id/unit_conv_title"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginTop="6dp"
			android:layout_marginBottom="6dp"
			android:background="#70a5b3" />
		<Spinner
			android:id="@+id/unit_conv_type_spinner"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/unit_conv_title"
			android:paddingTop="15dp"/>
		<Spinner
			android:id="@+id/unit_conv_unit1_spinner"
			android:layout_below="@id/unit_conv_type_spinner"
			android:layout_width="fill_parent"
			android:layout_marginLeft="16dp"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/unit_conv_input_label"
			android:textSize="14sp"
			android:paddingTop="8dp"
			android:text="Input: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/unit_conv_unit1_spinner"
			android:layout_marginLeft="20dp"
		/>
		<EditText
			android:id="@+id/unit_conv_text_input"
			android:layout_width="600dp"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:hint="Value"
			android:maxLength="20"
			android:singleLine="true"
			android:inputType="numberDecimal"	
			android:layout_below="@id/unit_conv_unit1_spinner"
			android:layout_toRightOf="@id/unit_conv_input_label"
		/>
		<Spinner
			android:id="@+id/unit_conv_unit2_spinner"
			android:layout_width="fill_parent"
			android:layout_marginLeft="16dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/unit_conv_text_input"
		/>
		<TextView
			android:id="@+id/unit_conv_text_output"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/unit_conv_unit2_spinner"
			android:text="Output"
			android:paddingTop="10dp"
			android:paddingLeft="12dp"
			android:layout_marginLeft="16dp"
			android:textSize="18sp"
		/>
		<TextView
			android:id="@+id/unit_conv_frac_output"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/unit_conv_text_output"
			android:text="Fraction Equivalent"
			android:paddingTop="10dp"
			android:paddingLeft="12dp"
			android:layout_marginLeft="16dp"
			android:textSize="18sp" />
	</RelativeLayout>
</ScrollView>
