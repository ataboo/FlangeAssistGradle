<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atasoft.flangeassist" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="false">
        <activity
            android:name="com.atasoft.flangeassist.MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>>
        </activity>
        <activity
            android:name="com.atasoft.flangeassist.PreferenceMenu"
            android:label="@string/app_name"
            android:parentActivityName="com.atasoft.flangeassist.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.atasoft.flangeassist.MainActivity" />>
        </activity>
        <activity android:name="com.atasoft.flangeassist.AboutPage"
            android:label="About"
            android:parentActivityName="com.atasoft.flangeassist.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.atasoft.flangeassist.MainActivity" />>
        </activity>
    </application>

</manifest>
